<aura:component controller="SFM_Wizard_LightningController">
    <aura:attribute name="tableData" type="Object"/>
    <aura:attribute name="recordId" type="Id"/>
    
    <h1>{!$Label.c.SFW001_TAG012}</h1>
    <br/>
    <table class="slds-table slds-table_bordered slds-table_resizable-cols slds-table_fixed-layout" role="grid">
        <thead>
            <tr class="slds-text-title_caps">
                <th scope="col">
                    <div class="slds-truncate" title="{!$Label.c.SFW001_TAG010}">{!$Label.c.SFW001_TAG010}</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate" title="{!$Label.c.SFW001_TAG011}">{!$Label.c.SFW001_TAG011}</div>
                </th>
            </tr>
        </thead>
        <tbody>
            <aura:iteration var="opdocTemplate" items="{!v.tableData}" indexVar="index">
                <tr>
                    <th scope="row" data-label="{!$Label.c.SFW001_TAG010}">
                        <div class="slds-truncate" title="{!opdocTemplate.processRecName}"><a data-selected-Index="{!index}" href="#" onclick ="{!c.navigateToPath}">{!opdocTemplate.processRecName}</a></div>
                    </th>
                    <td data-label="{!$Label.c.SFW001_TAG011}">
                        <div class="slds-truncate" title="{!opdocTemplate.description}">{!opdocTemplate.description}</div>
                    </td>   
                </tr>
            </aura:iteration>
        </tbody>
    </table>
	
</aura:component>