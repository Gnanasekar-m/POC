<apex:page standardController="Service_Order__c" extensions="WORD_CloseWO"  sidebar="true" showHeader="true"  tabStyle="Service_Order__c" id="closewo"> 
  
   <apex:stylesheet value="{!URLFOR($Resource.COMM_Resources2, 'SVMXP_Resources/css/SVMXP_resources.css')}" />
    <apex:form >

        <apex:variable value="{!WOCloseHeader}" var="newWOC"/>
        <apex:pageBlock id="block" title="{!TAG001} {!newWOC.Name}" helpTitle="{!TAG002}    " helpUrl="{!HLPURL}" >
    
        <apex:pageBlockButtons location="top" style="text-align:center;">
                <apex:commandButton action="{!CloseWorkOrderConfirm}" value="{!TAG003}" id="renewBtid" rendered="{!DisplayClose}"/>
                <apex:commandButton action="{!CloseWorkOrder}" value="{!TAG004}" id="conactid" rendered="{!DisplayContinue}"/>
                <apex:commandButton action="{!Cancel}" value="{!TAG005}" id="cancelBtid"/>
        </apex:pageBlockButtons> 
        
        <apex:pageMessages showDetail="true"></apex:pageMessages>

        <apex:pageBlockSection id="Blocksec" collapsible="false" columns="2" rendered="{!showDetailBlock}"> 
            <apex:inputField style="Width:80%" value="{!newWOC.Work_Performed__c}" />
            <apex:inputField style="Width:80%" value="{!newWOC.Special_Instructions__c}" />
            <apex:inputField style="Width:80%" value="{!newWOC.Customer_Failure_Feedback__c}" />
            <apex:inputField style="Width:80%" value="{!newWOC.Corrective_Action__c}" />
            <apex:inputField style="Width:80%" value="{!newWOC.Configuration_Before__c}" /> 
            <apex:inputField style="Width:80%" value="{!newWOC.Configuration_After__c}" /> 
            <apex:inputField style="Width:80%" value="{!newWOC.Failure_Location__c}" /> 
            <apex:inputField style="Width:80%" value="{!newWOC.Symptom__c}" /> 
            <apex:inputField style="Width:80%" value="{!newWOC.Failed_Assembly__c}" /> 
            <apex:inputField style="Width:80%" value="{!newWOC.Root_Cause__c}" /> 
            <apex:outputField style="Width:80%" value="{!newWOC.Order_Status__c}" /> 
            <apex:inputField style="Width:80%" value="{!newWOC.How_Fixed__c}" /> 
            </apex:pageBlockSection>
        </apex:pageBlock>  
    </apex:form>
</apex:page>